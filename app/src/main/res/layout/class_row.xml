<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tv_class_type"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="#5791c8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="class type"
        android:id="@+id/tvclasstype"
        android:gravity="right"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/tv_class_name"
        android:layout_alignStart="@+id/tv_class_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="class name"
        android:id="@+id/tv_class_name"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="startdate"
        android:id="@+id/tvstartdate"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/tvclasstype"
        android:layout_alignEnd="@+id/tvclasstype" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="( time )"
        android:id="@+id/tvTime"
        android:layout_alignTop="@+id/tv_class_name"
        android:layout_toEndOf="@+id/tv_class_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvtime"
        android:layout_below="@+id/tvstartdate"
        android:layout_alignEnd="@+id/tvstartdate" />

</RelativeLayout>